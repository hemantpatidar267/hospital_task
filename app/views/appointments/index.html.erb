<h1>All Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th>Disease</th>
      <th>Doctor_id</th>
      <th>Pateint_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment.each do |appointment| %>
      <tr>
        <td><%= appointment.id %></td>
        <td><%= appointment.name %></td>
        <td><%= appointment.age %></td>
        <td><%= appointment.address %></td>
        <td><%= appointment.disease %></td>
        <td><%= appointment.doctor_id %></td>
        <td><%= appointment.pateint_id %></td>
        <td><%= link_to "view", appointment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


  <%= button_to "Sign out", destroy_pateint_session_path, method: :delete %>
  <%= button_to "Book appointment", appointments_new_path, method: :get %>


